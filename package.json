{
  "name": "privy-web",
  "author": "godraadam",
  "version": "0.1.0",
  "private": true,
  "description": "This is a desktop client for the Privy Messenger system",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.36",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^0.27.2",
    "concurrently": "^7.2.1",
    "daisyui": "^2.15.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "lodash": "^4.17.21",
    "react": "^18.1.0",
    "react-daisyui": "^2.0.2",
    "react-dom": "^18.1.0",
    "react-promise-tracker": "^2.1.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "react-spinners": "^0.12.0",
    "typescript": "^4.6.4",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "src/electron-starter.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none nmp run start\" \"npm run electron:start\"",
    "electron:build": "electron-builder -c.extraMetadata.main=build/static/js/main.fd60647e.js",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "build": {
    "extends": null,
    "appId": "dev.godraadam.privy",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "electron": "^19.0.2",
    "electron-builder": "^23.0.3",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.0.24"
  }
}
